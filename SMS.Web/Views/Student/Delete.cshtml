@model Student

<h3 class="my-4">Delete Student</h3>

<h4 class="mb-4">Are you sure you want to delete this Student?</h4>

<div>

  <div class="card rounded shadow p-3">
    <!-- display the student using a <dl> as per Details.cshtml -->

    <div class="mt-4">
      <!-- create a form to submit post request to DeleteConfirm action     -->
      <form asp-action="DeleteConfirm">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- form to ensure the student passed to the controller is complete -->
        <input type="hidden" asp-for="Id" class="form-control" />

        <!-- add form groups for each student attributed being edited -->
        <!-- you can copy the necessary groups from Create.cshtml     -->
        <div class="mt-3">
          <label asp-for="Name" class="form-label"></label>
          <input asp-for="Name" class="form-control" />
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- submit button and cancel link which navigates to Index action -->
        <div class="mt-3">
          <input type="submit" value="Delete" class="btn btn-danger" />
          <a class="btn btn-warning" asp-action="Index">Cancel</a>
        </div>

      </form>
      <!-- student Id should be a hidden input field named 'Id' in the form -->
      <!-- add type submit input button and cancel link to Index action     -->

    </div>
  </div>

</div>